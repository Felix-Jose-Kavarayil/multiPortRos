<launch>

<!--
To make the serial node work, we had to...
cd ~/catkin_ws/src
git clone https://github.com/ros-drivers/rosserial.git -b noetic-devel
cd ..
catkin_make
-->


<machine name="a230-pc89"
      address="172.22.50.23"
      user="felix"
      env-loader="~/catkin_ws/src/multiPortRos/devel/master_a230-pc89_env.sh"
      default="true"
      />

<machine name="a230-pc005"
      address="172.22.24.91" 
      user="felix"
      env-loader="~/catkin_ws/src/multiPortRos/devel/a230-pc005_env.sh"
      default="false"
      />


<node name="serial_node_arduino"
      type="serial_node.py"
      pkg="rosserial_python"
      args="/dev/ttyACM0"
      output="screen"
      />
 
<node name="multiport_task_logger"
      type="multiport_task_logger.py"
      pkg="multiport_ros"
      output="screen"
      />

</launch>
